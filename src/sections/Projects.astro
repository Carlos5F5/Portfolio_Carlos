// Función para obtener el color de la tecnología
function getTechColor(tech: string): string {
  const colors: Record<string, string> = {
    'React': 'bg-blue-500/90',
    'JavaScript': 'bg-yellow-500/90',
    'Python': 'bg-green-500/90',
    'Dashboard': 'bg-orange-500/90',
    'OSINT': 'bg-red-500/90',
    'Automation': 'bg-purple-500/90',
    'C2': 'bg-red-500/90',
    'WebSocket': 'bg-blue-500/90'
  };
  return colors[tech] || 'bg-gray-500/90';
}
---

<section id="projects" class="py-20 px-6 max-w-6xl mx-auto relative z-10">
  <!-- Background effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-cyan-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
  </div>

  <!-- Section Header -->
  <div class="text-center mb-16 relative">
    <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
      <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
        Mis Proyectos
      </span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-600 mx-auto rounded-full"></div>
    <p class="text-gray-400 mt-4 text-lg">
      Veamos un poco de lo que he hecho...  Espero que te guste.
    </p>
  </div>

  <!-- Project Categories -->
  {projectCategories.map((category, categoryIndex) => (
    <div class={categoryIndex < projectCategories.length - 1 ? 'mb-20' : ''}>
      <!-- Category Header -->
      <div class="flex items-center gap-3 mb-8">
  
        <div>
          <h3 class={`text-2xl font-semibold ${colorClasses[category.color]?.text}`}>
            {category.title}
          </h3>
          <p class="text-gray-500 text-sm">{category.description}</p>
        </div>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {category.projects.map((project) => (
          <div class={`group relative bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl overflow-hidden border border-gray-700/50 ${colorClasses[category.color]?.hover} transition-all duration-500 hover:scale-105`}>
            <!-- Glow effect -->
            <div class={`absolute inset-0 bg-gradient-to-r ${colorClasses[category.color]?.glow} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
            
            <!-- Image container with overlay -->
            <div class="relative overflow-hidden">
              <img 
                src={project.image}
                alt={project.title}
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110" 
              />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Tech stack badges -->
              <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                {project.technologies.map((tech) => (
                  <span class={`px-2 py-1 ${getTechColor(tech)} text-white text-xs rounded-full`}>
                    {tech}
                  </span>
                ))}
              </div>
            </div>

            <!-- Project content -->
            <div class="p-6 relative z-10">
              <h4 class={`text-xl font-bold text-white mb-3 ${colorClasses[category.color]?.hoverText} transition-colors`}>
                {project.title}
              </h4>
              <p class="text-gray-300 mb-4 leading-relaxed">
                {project.description}
              </p>
              
              <!-- Features list -->
              <div class="flex flex-wrap gap-2 mb-4">
                {project.features.map((feature) => (
                  <span class="text-xs px-2 py-1 bg-gray-700 text-gray-300 rounded">
                    {feature}
                  </span>
                ))}
              </div>

              <!-- Project link -->
              <a 
                href={project.link}
                target="_blank" 
                class={`inline-flex items-center gap-2 ${colorClasses[category.color]?.linkText} transition-colors group/link`}
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path set:html={icons[project.linkType]} />
                </svg>
                {project.linkText}
                <svg class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path set:html={icons.external} />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</section>

<style>
  /* Smooth hover animations */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }
  
  .group:hover .group-hover\:opacity-100 {
    opacity: 1;
  }
  
  .group:hover .group-hover\:text-cyan-400 {
    color: #22d3ee;
  }
  
  .group:hover .group-hover\:text-red-400 {
    color: #f87171;
  }
  
  .group\/link:hover .group-hover\/link\:translate-x-1 {
    transform: translateX(0.25rem);
  }
  
  /* Pulse animation for background effects */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.2; }
  }
  
  .animate-pulse {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .grid.lg\:grid-cols-2 {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 640px) {
    .text-4xl.lg\:text-5xl {
      font-size: 2.25rem;
    }
    
    .p-6 {
      padding: 1.25rem;
    }
  }
</style>